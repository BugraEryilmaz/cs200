{
  "name": "cs200",
  "displayName": "cs200",
  "publisher": "cs200",
  "repository": {
    "type": "git",
    "url": "https://github.com/BugraEryilmaz/cs200"
  },
  "description": "An extension for visualizing RTL simulation and RISC-V emulation for CS200 course at EPFL.\"",
  "version": "0.2.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onDebugResolve:cs200",
    "onDebugDynamicConfigurations:cs200",
    "onCommand:extension.cs200.getProgramName"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "assembly",
        "extensions": [
          ".s",
          ".asm"
        ]
      },
      {
        "id": "verilog",
        "extensions": [
          ".v",
          ".sv"
        ]
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "extension.cs200.debugEditorContents",
          "when": "editorLangId == 'riscv' || editorLangId == 'assembly' || editorLangId == 'verilog' || editorLangId == 'system verilog'",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.cs200.debugEditorContents"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.cs200.debugEditorContents",
        "title": "Debug File",
        "category": "Mock Debug",
        "enablement": "!inDebugMode",
        "icon": "$(debug-alt)"
      },
      {
        "command": "cs200.helloWorld",
        "category": "cs200",
        "title": "Hello World"
      }
    ],
    "breakpoints": [
      {
        "language": "riscv"
      },
      {
        "language": "assembly"
      }
    ],
    "debuggers": [
      {
        "type": "cs200",
        "languages": [
          "riscv",
          "assembly",
          "verilog",
          "system verilog"
        ],
        "label": "CS200 Debugger",
        "configurationAttributes": {
          "launch": {
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${workspaceFolder}/Vtb"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "cs200",
            "request": "launch",
            "program": "${workspaceFolder}/Vtb",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "Mock Debug: Launch",
            "description": "A new configuration for 'debugging' a user selected verilog and assembly file.",
            "body": {
              "type": "cs200",
              "request": "launch",
              "program": "^\"\\${workspaceFolder}/\\Vtb\"",
              "stopOnEntry": true
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tsconfig/svelte": "^5.0.4",
    "@types/btoa": "^1.2.3",
    "@types/glob": "^7.1.3",
    "@types/googlemaps": "^3.40.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.5.7",
    "@types/polka": "^0.5.1",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "concurrently": "^5.3.0",
    "eslint": "^8.57.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "rollup": "^4.18.0",
    "rollup-plugin-svelte": "^7.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^4.2.18",
    "svelte-preprocess": "^6.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "vscode-test": "^1.4.0",
    "webpack": "^5.92.0",
    "webpack-cli": "^5.1.4",
    "@vscode/debugadapter": "^1.56.0",
    "@vscode/debugadapter-testsupport": "^1.56.0",
    "await-notify": "^1.0.1",
    "base64-js": "^1.5.1",
    "esbuild": "^0.14.29",
    "events": "^3.3.0",
    "path-browserify": "^1.0.1",
    "rimraf": "^3.0.2",
    "url": "^0.11.0",
    "@vscode/vsce": "^2.7.0"
  },
  "dependencies": {
    "rollup-plugin-css-only": "^4.5.2"
  }
}
